<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/stretchedHorizontally"
    android:layout_height="?attr/listPreferredItemHeight"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/eight">

    <TextView
        android:id="@+id/itemUserName"
        style="@style/wrapContent"
        android:hint="@string/app_name" />

    <TextView
        android:id="@+id/itemUserBloodGroup"
        style="@style/wrapContent"
        android:hint="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/itemUserName" />

    <ImageView
        android:id="@+id/itemUserStatus"
        style="@style/wrapContent"
        android:contentDescription="@string/imageBloodStatus"
        android:src="@drawable/ic_help_outline_black_48px"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>